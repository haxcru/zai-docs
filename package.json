{
  "name": "zai-docs",
  "version": "1.0.0",
  "description": "Documentation for the Zero Collateral Dai (ZAI) Protocol",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "format": "prettier --write \"{,!(.next)/**/}*.{js,json,md,mdx}\""
  },
  "dependencies": {
    "next": "^10.0.4",
    "nextra": "^0.3.2",
    "nextra-theme-docs": "^1.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "bracketSpacing": true,
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,mdx}": [
      "yarn format"
    ]
  }
}
